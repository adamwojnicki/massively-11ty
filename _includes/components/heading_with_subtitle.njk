<header>
    {% if props.heading_level == 'h3' %}
        <h3>{{props.title}}</h3>
    {% elif props.heading_level == 'h4' %}
        <h4>{{props.title}}</h4>
    {% elif props.heading_level == 'h5' %}
        <h5>{{props.title}}</h5>
    {% else %}
        <h2>{{props.title}}</h2>
    {% endif %}
    <p>{{props.content}}</p>
</header>