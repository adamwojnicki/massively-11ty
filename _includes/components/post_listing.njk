{% from "components/post_item.njk" import post_item %}
{% from "components/post_featured.njk" import post_featured %}

{% set featuredPost = collections.post|first %}

{% if featuredPost == null %}
    <p>There are no posts yet.</p>
{% else %}
    {{ post_featured(featuredPost) }}
{% endif %}

{% if collections.post.length <= 1 %} 
    <p>There are no more posts yet.</p>
{% else %}
    <section class="posts">
        {% for post in collections.post %}
            {% if post.url != featuredPost.url %}
                {{ post_item(post) }}
            {% endif %}
        {% endfor %}
    </section>
{% endif %}

