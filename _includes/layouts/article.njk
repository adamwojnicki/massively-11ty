---
layout: layout_page.njk
---

<div id="main">
    <section class="post">
        <header class="major">
            <span class="date">{{ date|postDate }}</span>
            <h1>{{ title }}</h1>
            <p>{{ description }}</p>
        </header>
        <div class="image main">
            <img src="{{ image.src }}" alt="{{ image.alt }}"/>
        </div>
        {{ content|safe }}
    </section>
</div>